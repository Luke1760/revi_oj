<!DOCTYPE html>
<html lang="en">
	<head>
		<%= render partial: 'layouts/head' %>

		<%= yield :styles %>
	</head>
	<body class="page-body">
		<%= render partial: 'layouts/nav' %>
		<div class="page-container">
			<div class="main-content">
				<%= render partial: 'layouts/header' %>
				<%= yield %>
				<%= render partial: 'layouts/footer' %>
			</div>
			<%= yield :scripts %>
			<%= javascript_include_tag 'application_footer.js' %>
		</div>
		<div class="page-loading-overlay">
		    <div class="loader-2"></div>
		</div>

		<%= yield :modals %>

		<% if @home_page || @contest_page || @problem_page || @scoreboard_page || @submissions_page %>
			<%= stylesheet_link_tag "datatables/dataTables.bootstrap.css" %>
			<%= stylesheet_link_tag "custom-table.css" %>
		<% end %>

		<%= render 'layouts/scripts' %>

	</body>
</html>
