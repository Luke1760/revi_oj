<h2><% @title = 'Forgot Password | CodeCracker' %></h2>
<h2>Forgot Password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form fade-in-effect", novalidate: "novalidate" }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group">
	    <label class="control-label" for="user_email">Email</label>
	    <%= f.email_field :email, autofocus: true, class: "form-control input-dark"%>
	</div>

	<div class="form-group">
	    <button type="submit" class="btn btn-dark btn-block text-left"> <i class="fa-caret-square-o-right"></i> Send me reset password instructions
	    </button>
	</div>

<% end %>

<%= render "devise/shared/links" %>
